<root>
	<!-- Makes all radiated be killed with headshot only undless hit with anti-rad mod -->

	<append xpath="//entity_class[@name='playerMale']">
		<effect_group>
			<passive_effect name="HeadShotOnly" operation="base_set" value="1">
				<requirement name="EntityTagCompare" target="other" tags="radiated"/>
				<requirement name="!HasBuff" buff="buffRadiatedRegenBlock"/>
			</passive_effect>
		</effect_group>
	</append>
		
		


